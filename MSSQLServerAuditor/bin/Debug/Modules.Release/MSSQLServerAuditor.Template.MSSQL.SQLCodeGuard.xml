<?xml version="1.0" encoding="UTF-8"?>
<MSSQLServerAuditorTemplate id="mssql_SQLCodeGuard" type="MSSQL" xmlns:xi="http://www.w3.org/2003/XInclude" version="1.0">
	<i18n name="en">
		MSSQL: SQLCodeGuard
	</i18n>
	<i18n name="ru">
		MSSQL: SQLCodeGuard
	</i18n>

	<MainWindowTitle>
		<i18n name="en">
			$ConnectionName$ $ModuleName$ $ApplicationProductName$ $ApplicationProductVersion$
		</i18n>
		<i18n name="ru">
			$ConnectionName$ $ModuleName$ $ApplicationProductName$ $ApplicationProductVersion$
		</i18n>
	</MainWindowTitle>

	<TreeTitle>
		<i18n name="en">
			$ConnectionName$ : $ModuleName$
		</i18n>
		<i18n name="ru">
			$ConnectionName$ : $ModuleName$
		</i18n>

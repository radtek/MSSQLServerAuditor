		<i18n name="en">
			Backup issues
		</i18n>
		<i18n name="ru">
			Проблемы с архивированием
		</i18n>

		<sql-select id="0" file="SQLQuery\mssql\MSSQLQuery.DatabaseBackup.xml" name="GetLastDatabaseBackup" hierarchy="">
